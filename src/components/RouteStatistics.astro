---
import Statistic from '@components/Statistic.astro';

type Statistic = {
	name: string;
	value: string | number;
	unit?: string;
};

interface Props {
	statistics: Statistic[];
}

const { statistics } = Astro.props;
---

<div class="not-prose relative bg-black px-8 @4xl/article:px-16 py-8 w-wider">
	<div class="flex flex-wrap justify-between gap-4 @xl/article:gap-8 @4xl/article:gap-16">
		{statistics.map(({ name, value, unit }) => <Statistic name={name} {value} {unit} />)}
		<button
			type="button"
			class="flex-grow text-white bg-truegray-800 hover:bg-truegray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold text-base px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
		>
			Open Route
			<svg
				aria-hidden="true"
				class="w-5 h-5 ml-auto"
				fill="currentColor"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
				><path
					fill-rule="evenodd"
					d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
					clip-rule="evenodd"></path></svg
			>
		</button>
	</div>
</div>
