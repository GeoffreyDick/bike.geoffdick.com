---
interface Props {
  name: string;
  value: string | number;
  unit?: string;
}

const { name, value, unit } = Astro.props;
---

<div class="text-base-200 flex flex-col m-[var(--test)]">
  <div class="text-sm opacity-70">{ name }</div>
  <div class="text-2xl font-bold">{ value }{ unit }</div>
</div>
